<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/circles_subcategory"
        android:contentDescription="TODO"
        android:showDividers="middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subCategory_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:lines="2"
        android:maxLines="2"
        android:text="Hamburgures"
        android:textAppearance="@style/SubCategoryRecyclerViewMenu"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <ImageView
        android:id="@+id/subcategory_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintEnd_toEndOf="@+id/subCategory_name"
        app:layout_constraintStart_toStartOf="@+id/subCategory_name"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:srcCompat="@drawable/appetizer" />

</androidx.constraintlayout.widget.ConstraintLayout>