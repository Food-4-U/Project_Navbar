<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/produtoNameFaturaROW"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cour"
            android:textColor="@color/black"
            android:text="Produto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quantidadeFaturaROW"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/cour"
            android:text="QTD"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/produtoNameFaturaROW"
            app:layout_constraintTop_toTopOf="@+id/produtoNameFaturaROW" />

        <TextView
            android:id="@+id/precoROW"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:fontFamily="@font/cour"
            android:text="preÃ§o"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/quantidadeFaturaROW"
            app:layout_constraintTop_toTopOf="@+id/quantidadeFaturaROW" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/cour"
            android:text="Tota:"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/precoROW"
            app:layout_constraintTop_toTopOf="@+id/precoROW" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>