<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productCard"
    android:layout_width="164dp"
    android:layout_height="169dp"
    android:layout_margin="9dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="164dp"
        android:layout_height="169dp">

        <ImageButton
            android:id="@+id/likebtnMenu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparent_background"
            android:src="@drawable/ic_heartnotfill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productPhoto"
            android:layout_width="109dp"
            android:layout_height="98dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription"></com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/segoeuil"
            android:text="Francesinha"
            android:textColor="@color/text"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/productPhoto"
            app:layout_constraintStart_toStartOf="@+id/productPhoto"
            app:layout_constraintTop_toBottomOf="@+id/productPhoto">


        </TextView>

        <TextView
            android:id="@+id/priceProduct"
            android:layout_width="57dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/trebucbd"
            android:gravity="center"
            android:text="7.50â‚¬"
            android:textAlignment="center"
            android:textColor="@color/product_price"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/productTitle"
            app:layout_constraintStart_toStartOf="@+id/productTitle"
            app:layout_constraintTop_toBottomOf="@+id/productTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
