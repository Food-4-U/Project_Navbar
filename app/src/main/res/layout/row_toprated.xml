<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/menu_foodPhoto2"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/menu_nameFood2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shapeAppearanceOverlay="@style/ImageView.Corner_TopRated" />

        <TextView
            android:id="@+id/menu_nameFood2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/segoeuisl"
            android:text="Hamburguer á moda da Casa"
            android:textAlignment="viewStart"
            android:textColor="@color/product_name"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/menu_foodPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="11,80€"
            android:theme="@style/Price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/menu_foodEvauation2" />

        <ImageView
            android:id="@+id/buttonAddTop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/circles_subcategory" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonAddTop"
            app:layout_constraintEnd_toEndOf="@+id/buttonAddTop"
            app:layout_constraintStart_toStartOf="@+id/buttonAddTop"
            app:layout_constraintTop_toTopOf="@+id/buttonAddTop"
            app:srcCompat="@drawable/magnifying_glass" />

        <TextView
            android:id="@+id/menu_foodEvauation2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:fontFamily="@font/trebuc"
            android:gravity="center_vertical"
            android:text="4,5"
            android:textColor="@color/product_name"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/menu_nameFood2"
            app:layout_constraintTop_toTopOf="@+id/ratingBar_hottest2" />

        <RatingBar
            android:id="@+id/ratingBar_hottest2"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="183dp"
            android:layout_height="32dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:isIndicator="true"
            android:max="5"
            android:rating="3"
            android:scaleX=".6"
            android:scaleY=".6"
            android:theme="@style/MyRatingBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menu_foodEvauation2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>