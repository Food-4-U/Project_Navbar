<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Food4U_Nav" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_btn</item>
        <item name="colorPrimaryVariant">@color/yellow_btn</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_btn</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="ImageView.Corner_Hightlights" parent="">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/segoeuil</item>
    </style>

    <style name="NamePages">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/candarabold</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="SubtitleRegularStyle">
        <item name="android:textColor">@color/variation_text</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LighInfoOrders">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/segoeuisl</item>
        <item name="android:textColor">@color/lightInfo_order</item>
    </style>

    <style name="ProfileViewPagerTitles">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="SubtitleLightStyle">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/segoeuil</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/segoeuisl</item>
    </style>

    <style name="Price">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorControlNormal">@color/product_name</item>
        <item name="colorControlActivated">@color/yellow_btn</item>
    </style>
</resources>